<h3 class="sub-header">My Favorite Questions</h3>

{{#each favoriteQuestion.threads as |question|}}
  <div class="row userQuestionBox" id="favorite-question">
    <div class="col-xs-1">
      {{avatar-generator question}}
    </div>

    <div class="col-xs-5">
      <h4>
        {{question-popularity question}}<span> </span>
        {{question.topic}}
      </h4>
      <h5>Ask by {{question.author}}</h5>
    </div>

    <div class="col-xs-3">
      <h5>Posted on</h5>
      <p>{{question.date}}</p>
    </div>

    <div class="col-xs-2">
      <center><h5>Answers</h5>
      <h4>{{question.answers.length}}</h4></center>
    </div>
  </div>
{{/each}}
