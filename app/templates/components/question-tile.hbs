<div class="row userQuestionBox">
  <div class="col-xs-2">
    <h4 class="style-author"> Ask by {{question.author}}</h4>
  </div>

  <div class="col-xs-10">
    <h4>{{question-popularity question}}<span> </span>
      {{question.topic}}
    </h4>
    <h5>Additional Note: {{question.note}}</h5>
    <hr class="styleTopBottom">

    <div class="row">
      <div class="col-xs-10">
        {{update-question update="update" destroyQuestion="destroyQuestion" question=question}}
      </div>

      <div class="col-xs-2">
        <button {{action 'addToFavorite' question}} class="btn btn-xs pull-right style-action" id="button-fav">Add to Favorite</button>
      </div>
    </div>
  </div>

</div>

{{#each question.answers as |answer|}}
  <div class="row userAnswerBox">
    <div class="col-xs-2">
      <p></p>
      <p>Reply by {{answer.name}}</p>
    </div>

    <div class="col-xs-7">
      <p></p>
      <p>{{answer.reply}}</p>
    </div>

    <div class="col-xs-3">
      <p></p>
      <p {{action 'destroyAnswer' answer}} class="style-action editBox">Delete</p>
    </div>
  </div>
{{/each}}
